{
  "name": "Overt",
  "description": "Install and manage your apps with Overt",
  "version": "0.6.0",
  "icons": {
    "16": "icons/overt-app-icon-16.png",
    "32": "icons/overt-app-icon-32.png",
    "48": "icons/overt-app-icon-48.png",
    "128": "icons/overt-app-icon-128.png"
  },
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/overt-app-icon-128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["tabs"]
}
